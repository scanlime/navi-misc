#!/sbin/runscript

depend() {
	need net
}

start() {
	ebegin "Starting fyre"
	start-stop-daemon --start --quiet --chuid fyre --nicelevel 19 \
		--pidfile /var/run/fyre.pid \
		--startas /usr/local/bin/fyre -- -r
	eend $?
}

stop() {
	ebegin "Stopping fyre"
	start-stop-daemon --stop --quiet --pidfile /var/run/fyre.pid
	eend $?
}
