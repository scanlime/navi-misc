#!/usr/bin/env python

Import ('env')
env.Append (CPPPATH = 'tinyxml')
env.Append (LIBS = 'tinyxml')
env.Append (LIBPATH = 'tinyxml')

# Build the server
screamersd_sources = [
	'ScreamersD.cpp',
	'TextUtils.cpp',
	'World.cpp',
	'WorldParser.cpp',
]
env.Program ('screamersd', screamersd_sources)

# Build the client
screamers_sources = [
	'Application.cpp',
	'FrameListener.cpp',
	'Screamers.cpp',
]
env.Program ('screamers', screamers_sources)
