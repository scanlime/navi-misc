#!/usr/bin/env python

Import ('env')

libraries = ['tinyxml', 'tnl']

e = env.Copy ()
e.Append (CPPPATH = libraries, LIBS = libraries, LIBPATH = libraries)

# Build our libraries
SConscript (['%s/SConscript' % s for s in libraries])

# Build the server
screamersd_sources = [
	'ScreamersD.cpp',
	'TextUtils.cpp',
	'World.cpp',
	'WorldParser.cpp',
]
e.Program ('screamersd', screamersd_sources)

# Build the client
screamers_sources = [
	'Application.cpp',
	'FrameListener.cpp',
	'Screamers.cpp',
]
e.Program ('screamers', screamers_sources)
