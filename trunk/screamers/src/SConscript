#!/usr/bin/env python

Import ('env')
env.Append (CCFLAGS = '-g')
env.Append (CPPPATH = '../include')

# Build the server
screamersd_sources = [
	'ScreamersD.cpp',
	'TextUtils.cpp',
	'tinyxmlparser.cpp',
	'tinyxmlerror.cpp',
	'tinyxml.cpp',
	'World.cpp',
	'WorldParser.cpp',
]
env.Program ('screamersd', screamersd_sources)

# Build the client
screamers_sources = [
	'Application.cpp',
	'FrameListener.cpp',
	'Screamers.cpp',
]
env.Program ('screamers', screamers_sources)
