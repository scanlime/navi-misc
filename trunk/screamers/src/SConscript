#!/usr/bin/env python

Import ('env')

libraries = ['tinyxml', 'tnl']

env.Append (CPPPATH = libraries, LIBS = libraries, LIBPATH = libraries)

# Build the server
screamersd_sources = [
	'ScreamersD.cpp',
	'TextUtils.cpp',
	'World.cpp',
	'WorldParser.cpp',
]
env.Program ('screamersd', screamersd_sources)

# Build the client
screamers_sources = [
	'Application.cpp',
	'FrameListener.cpp',
	'Screamers.cpp',
]
env.Program ('screamers', screamers_sources)
