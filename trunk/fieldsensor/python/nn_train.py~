#!/usr/bin/python
import fieldbox, bpnn, sys, pickle

sensor = fieldbox.filter(fieldbox.sensor())
nn = bpnn.NN(8,16,1)

pattern = []

print "Prepare for reading 0 and press enter"
sys.stdin.read(1)
for i in range(0,200):
    sensor.read()
for i in range(0,20):
    pattern.append( [sensor.read(), [0]] )
print "done"

print "Prepare for reading 1 and press enter"
sys.stdin.read(1)
for i in range(0,200):
    sensor.read()
for i in range(0,20):
    pattern.append( [sensor.read(), [1]] )
print "done"

pickle.dump(pattern, open("nn_pattern.pickle", "w"))

print pattern
