SUBDIRS = data .

CSC = mcs -g

CSFLAGS =					\
	-target:library

ASSEMBLIES =					\
	$(FYRE_LIBS)				\
	-r:Mono.Posix				\
	-r:System.Drawing			\
	-r:$(top_builddir)/src/Fyre.exe

TARGET = Basic.dll
TARGET_CSFILES = 				\
	CartesianProduct.cs			\
	MatrixMultiply.cs			\
	StochasticBlur.cs			\
	Transform.cs
TARGET_RESOURCES =				\
	-resource:data/CartesianProduct.png	\
	-resource:data/MatrixMultiply.png	\
	-resource:data/StochasticBlur.png	\
	-resource:data/TwoDTransform.png

$(TARGET): $(TARGET_CSFILES) $(top_builddir)/src/Fyre.exe
	$(CSC) -o $@ $(CSFLAGS) $(ASSEMBLIES) $(TARGET_CSFILES) $(TARGET_RESOURCES)

pluginsdir = $(pkglibdir)/Plugins
plugins_DATA =					\
	$(TARGET)

EXTRA_DIST =					\
	$(TARGET_CSFILES)

CLEANFILES =					\
	$(TARGET)				\
	$(TARGET).mdb
