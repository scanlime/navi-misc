<?xml version="1.0"?>
<e-plugin-list>
    <e-plugin
     type="shlib"
     location="@PLUGINDIR@/liborg-gnome-mail-notification.so"
     id="org.gnome.evolution.mail.notification"
     name="Mail Notification">
        <description>Provides a notification-area icon showing when new mail has arrived</description>
	<author name="David Trowbridge" email="trowbrds@cs.colorado.edu"/>
	<hook class="org.gnome.evolution.mail.events:1.0">
	    <event target="folder" id="folder.newmail" handle="new_mail"/>
	</hook>
    </e-plugin>
</e-plugin-list>
