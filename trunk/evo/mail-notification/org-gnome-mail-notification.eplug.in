<?xml version="1.0"?>
<e-plugin-list>
    <e-plugin
     type="shlib"
     location="@PLUGINDIR@/liborg-gnome-mail-notification.so"
     id="org.gnome.evolution.mail.notification"
     load-on-startup="true"
     name="Mail Notification">
        <description>Provides a notification-area icon showing when new mail has arrived</description>
	<author name="David Trowbridge" email="trowbrds@cs.colorado.edu"/>
	<hook class="org.gnome.evolution.mail.config:1.0">
	    <group target="prefs" id="org.gnome.evolution.mail.prefs">
	        <item type="section" path="00.general/30.mailNotification" label="New Mail Notification"/>
		<item type="item" path="00.general/30.mailNotification/00.notificationArea" factory="mnotify_notification_area"/>
		<item type="item" path="00.general/30.mailNotification/10.beep" factory="mnotify_beep"/>
		<item type="item" path="00.general/30.mailNotification/20.sound" factory="mnotify_sound"/>
		<item type="item" path="00.general/30.mailNotification/30.soundPreference" factory="mnotify_sound_prefs"/>
	    </group>
	</hook>
	<hook class="org.gnome.evolution.mail.events:1.0">
	    <event target="folder" id="folder.changed" enable="newmail" handle="new_mail"/>
	    <event target="message" id="message.reading" handle="reading_message"/>
	</hook>
    </e-plugin>
</e-plugin-list>
