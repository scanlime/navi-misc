<?xml version="1.0"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

<xsd:attributeGroup name="namedObject">
  <xsd:attribute name="name" type="xsd:string"/>
</xsd:attributeGroup>

<xsd:simpleType name="Side">
  <xsd:restriction base="xsd:string">
    <xsd:enumeration value="left"/>
    <xsd:enumeration value="right"/>
  </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="basicStance">
  <xsd:restriction base="xsd:string">
    <xsd:enumeration value="neutral bow"/>
    <xsd:enumeration value="forward bow"/>
    <xsd:enumeration value="rear bow"/>
    <xsd:enumeration value="natural"/>
    <xsd:enumeration value="attention"/>
    <xsd:enumeration value="90 degree cat"/>
    <xsd:enumeration value="45 degree cat"/>
    <xsd:enumeration value="horse"/>
    <xsd:enumeration value="meditating horse"/>
    <xsd:enumeration value="front twist"/>
    <xsd:enumeration value="rear twist"/>
    <xsd:enumeration value="rotating twist"/>
    <xsd:enumeration value="close kneel"/>
    <xsd:enumeration value="wide kneel"/>
  </xsd:restriction>
</xsd:simpleType>

<xsd:element name="stance" type="basicStance">
  <xsd:extension>
    <xsd:attribute name="side" type="Side"/>
  </xsd:extension>
</xsd:element>

