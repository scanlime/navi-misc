<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">

<greeter>
  <!-- Background image -->
  <item type="pixmap">
    <normal file="spirograph.png" tint="#dddddd"/>
    <pos x="0" y="0" width="100%" height="100%"/>
  </item>
  <!-- Username/passwd entry -->
  <item type="rect">
    <normal color="#000000" alpha="0.3"/>
    <pos anchor="nw" x="5" y="15" width="box" height="box"/>
    <box orientation="vertical" min-width="340" xpadding="30" ypadding="30" spacing="10">
      <item type="label">
        <pos anchor="n" x="50%"/>
        <normal color="#FFFFFF" font="Bitsatream Vera Sans Mono 14"/>
	      <!-- Stock label for: Welcome to %h -->
	      <stock type="welcome-label"/>
      </item>
      <item type="label" id="pam-prompt">
        <pos anchor="nw" x="10%"/>
        <normal color="#FFFFFF" font="Bitsatream Vera Sans Mono 12"/>
	      <!-- Stock label for: Username: -->
	      <stock type="username-label"/>
      </item>
      <item type="rect">
	      <normal color="#FFFFFF"/>
        <pos anchor="n" x="50%" height="24" width="80%"/>
	      <fixed>
	        <item type="entry" id="user-pw-entry">
            <pos anchor="nw" x="1" y="1" height="-2" width="-2"/>
	        </item>
	      </fixed>
      </item>
      <item type="label" id="pam-message">
        <pos anchor="n" x="50%"/>
        <normal color="#FFFFFF" font="Bitsatream Vera Sans Mono 12"/>
	      <text></text>
      </item>
      <item type="label" id="caps-lock-warning">
        <normal color="#FFFFFF" font="Bitsatream Vera Sans Mono 12"/>
        <pos anchor="s" x="50%" y="80%"/>
        <stock type="caps-lock-warning"/>
      </item>
    </box>
  </item>
  
  <!-- Menubar -->
  <item type="rect">
    <normal color="#000000" alpha="0.6"/>
    <pos x="100%" y="-30" width="100%" height="30" anchor="ne"/>
    <fixed>
      <!-- Clock -->
      <item type="label" id="clock">
        <normal color="#ffffff" font="Bitsatream Vera Sans Mono 14"/>
        <pos x="20" y="50%" anchor="w" expand="true"/>
        <text>%c</text>
      </item>

      <item type="rect" id="session_button" button="true">
        <normal alpha="0.0"/>
        <pos x="-188" y="50%" anchor="e" width="box" height="box"/>
        <box orientation="horizontal">
          <item type="label">
            <pos y="50%" anchor="w"/>
            <normal color="#cccccc" font="Bitsatream Vera Sans Mono 14"/>
            <prelight color="#ffffff" font="Bitsatream Vera Sans Mono 14"/>
            <stock type="session"/>
          </item>
        </box>
      </item>

      <item type="rect" id="language_button" button="true">
        <normal color="#000000" alpha="0.0"/>
        <pos x="-123" y="50%" anchor="e" width="box" height="box" expand="true"/>
        <box orientation="vertical">
          <item type="label">
            <pos y="50%" anchor="w"/>
            <normal color="#cccccc" font="Bitsatream Vera Sans Mono 14"/>
            <prelight color="#ffffff" font="Bitsatream Vera Sans Mono 14"/>
            <stock type="language"/>
          </item>
        </box>
      </item>

      <item type="rect" id="reboot_button" button="true">
        <normal alpha="0.0"/>
        <pos x="-77" y="50%" anchor="e" width="box" height="box"/>
        <box orientation="horizontal">
          <item type="label">
            <pos y="50%" anchor="w"/>
            <normal color="#cccccc" font="Bitstream Vera Sans  Mono 14"/>
            <prelight color="#ffffff" font="Bitstream Vera  Sans Mono 14"/>
            <stock type="reboot"/>
          </item>
        </box>
      </item>

      <item type="rect" id="halt_button" button="true">
        <normal color="#000000" alpha="0.0"/>
        <pos x="-15" y="50%" anchor="e" width="box" height="box" />
        <box orientation="horizontal">
          <item type="label">
            <pos y="50%" anchor="w"/>
            <normal color="#cccccc" font="Bitsatream Vera Sans Mono 14"/>
            <prelight color="#ffffff" font="Bitsatream Vera Sans Mono 14"/>
            <stock type="halt"/>
          </item>
        </box>
      </item>
    </fixed>
  </item>
</greeter>
