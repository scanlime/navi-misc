#ifndef _H_NOISE
#define _H_NOISE

class Noise {
 public:

  static float noise(int x, int y, int seed);
  static float noise(int x, int y, int z, int seed);
  static float smoothNoise(float x, float y, int seed);
  static float smoothNoise(float x, float y, float z, int seed);
  static float interpolatedNoise(float x, float y, int seed);
  static float interpolatedNoise(float x, float y, float z, int seed);
  static float perlinNoise(float fundamental, float amplitude, int octaves, 
			   float persistence, float x, float y, int seed);
  static float perlinNoise(float fundamental, float amplitude, int octaves, 
			   float persistence, float x, float y, float z, int seed);
  static float interpolate(float a, float b, float x);

  /* Convert a uniform distribution to a standard normal distribution */
  static float standardNormal(float z);
};

#endif /* _H_NOISE */

/* The End */
