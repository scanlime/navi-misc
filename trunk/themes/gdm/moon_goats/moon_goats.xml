<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">

<greeter>
  <!-- Background image -->
  <item type="pixmap">
    <normal file="background.png"/>
    <pos x="0" y="0" width="100%" height="100%"/>
  </item>

  <!-- user/passwd entry -->
  <item type="rect">
    <normal alpha="0.0"/>
    <pos anchor="n" x="50%" y="15%" width="box" height="box"/>
    <box orientation="vertical" min-width="340" xpadding="30" ypadding="30" spacing="10">
      <item type="label">
        <pos anchor="n" x="50%"/>
        <normal color="#FFFFFF" font="Bitstream Vera Sans 14"/>
		<text>Welcome, Moon-goat Herder</text>
      </item>
      <item type="label" id="pam-prompt">
        <pos anchor="nw" x="10%"/>
        <normal color="#FFFFFF" font="Bitstream Vera Sans 12"/>
	      <!-- Stock label for: Username: -->
	      <stock type="username-label"/>
      </item>
      <item type="rect">
	      <normal color="#FFFFFF"/>
        <pos anchor="n" x="50%" height="24" width="80%"/>
	      <fixed>
	        <item type="entry" id="user-pw-entry">
            <pos anchor="nw" x="1" y="1" height="-2" width="-2"/>
	        </item>
	      </fixed>
      </item>
      <item type="label" id="pam-message">
        <pos anchor="n" x="50%"/>
        <normal color="#FFFFFF" font="Bitstream Vera Sans 12"/>
	      <text></text>
      </item>
      <item type="label" id="caps-lock-warning">
        <normal color="#FFFFFF" font="Bitstream Vera Sans 12"/>
        <pos anchor="s" x="50%" y="80%"/>
        <stock type="caps-lock-warning"/>
      </item>
    </box>
  </item>

  <!-- Menubar -->
  <item type="rect">
    <normal color="#777777"/>
    <pos anchor="nw" x="0" y="0" width="100%" height="75"/>
    <fixed>

      <item type="rect">
        <pos anchor="sw" x="0" y="100%" width="box" height="100%"/>
        <box orientation="horizontal" xpadding="10" spacing="10">
          <item type="rect" id="system_button" button="true">
            <pos anchor="sw" y="100%" width="box" height="box"/>
            <box orientation="horizontal">
              <item type="pixmap">
                <pos anchor="w" y="50%"/>
                <normal file="head2.png"/>
              </item>
              <item type="label">
                <pos anchor="w" y="50%"/>
                <normal color="#000000" font="Bitstream Vera Sans 24"/>
                <stock type="system"/>
              </item>
            </box>
          </item>

          <item type="rect" id="session_button" button="true">
            <pos anchor="sw" y="100%" width="box" height="box"/>
            <box orientation="horizontal">
              <item type="pixmap">
                <pos anchor="w" y="50%"/>
                <normal file="head1.png"/>
              </item>
              <item type="label">
                <pos anchor="w" y="50%"/>
                <normal color="#000000" font="Bitstream Vera Sans 24"/>
                <stock type="session"/>
              </item>
            </box>
          </item>

          <item type="rect" id="language_button" button="true">
            <pos anchor="sw" y="100%" width="box" height="box"/>
            <box orientation="horizontal">
              <item type="pixmap">
                <pos anchor="w" y="50%"/>
                <normal file="head3.png"/>
              </item>
              <item type="label">
                <pos anchor="w" y="50%"/>
                <normal color="#000000" font="Bitstream Vera Sans 24"/>
                <stock type="language"/>
              </item>
            </box>
          </item>
        </box>
      </item>
    </fixed>
  </item>

</greeter>
